<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RobotControlSimulator.App"
             xmlns:local="using:RobotControlSimulator"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
      <FluentTheme />
      <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

      <!--Button Styles-->
      <Style Selector="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="8,2"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
      </Style>

      <!--Border Styles-->
      <Style Selector="Border.Frame">
        <Setter Property="BorderBrush" Value="DarkGray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Background" Value="Transparent"/>
      </Style>
      <Style Selector="Border.HorizontalDecorationLine">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="5,10"/>
      </Style>
      <Style Selector="Border.VerticalDecorationLine">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="10,5"/>
      </Style>

      <!--Label Styles-->
      <Style Selector="Label">
        <Setter Property="FontSize" Value="14"/>
      </Style>
      <Style Selector="Label.Title">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Black"/>
      </Style>

      <!--GridSplitter Styles-->
      <Style Selector="GridSplitter">
        <Setter Property="Background" Value="LightGray"/>
      </Style>

      <!--TextBlock-->
      <Style Selector="TextBlock">
        <Setter Property="FontSize" Value="14"/>
      </Style>

      <!--TextBox-->
      <Style Selector="TextBox">
        <Setter Property="FontSize" Value="14"/>
      </Style>
      
    </Application.Styles>
</Application>